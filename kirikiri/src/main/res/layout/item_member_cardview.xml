<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/member_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="membercard"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMemberPic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:transitionName="img"
                app:srcCompat="@mipmap/ic_launcher" />

            <TableLayout
                android:id="@+id/member_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.14"
                android:paddingLeft="10dp"
                android:transitionName="info">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="성명"
                        android:textColor="#353535"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMemberName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:text="강구철"
                        android:textColor="#353535"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="근무처"
                        android:textColor="#353535"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvComname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="auto"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="㈜아시아텍스타일sdfsldfslfsfs"
                        android:textColor="#00498c"
                        android:textSize="16sp" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView187"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부서 : "
                        android:textColor="#353535"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView188"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvDept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="auto"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="영업"
                        android:textColor="#00498c"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="직위 : "
                        android:textColor="#353535"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView130"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPosition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="auto"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="영업"
                        android:textColor="#00498c"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_span="4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgHandPhone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/icon_call_2" />

                        <TextView
                            android:id="@+id/tvHandphone"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_red_small"
                            android:gravity="top"
                            android:text="010-5340-1953"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                    </LinearLayout>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgEmail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/icon_directory_email_2" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="sssdfsdfsdfsdfsfsfdfsdfsf@naver.com"
                            android:textColor="#353535"
                            android:textSize="12sp" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출생년도"
                        android:textColor="#353535"
                        android:textSize="13sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1953.02.18 양력"
                        android:textSize="13sp" />
                </TableRow>





            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
