<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detial_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zzangco.colorlibrary.activity.DetialInfoActivity"
    tools:showIn="@layout/activity_detial_info">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/color_info"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:transitionName="info">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:text=" : "
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:text="Liquid _ Green Gold (Metallic)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvColorName"
                android:textSize="20sp"
                android:maxLength="15"
                android:ellipsize="end"
                android:maxLines="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:text=" : "
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:text="70951"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvColorCode"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:text=" : "
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:text="001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvColorOrder"
                android:textSize="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >>
            <TextView
                android:text="Stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:text=" : "
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="0"
                    android:ems="10"
                    android:textStyle="normal|bold"
                    android:id="@+id/tvStock"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:textSize="20sp" />

            </LinearLayout>
        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/xf52"
        android:layout_marginTop="19dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:transitionName="img"/>

</RelativeLayout>
